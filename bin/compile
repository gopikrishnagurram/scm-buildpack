#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "=====> starting git buildpack compile"
dir=$(mktemp -t buildpackXXXXX)
rm -rf $dir
mkdir -p "$dir"

url=${GIT_URL}
echo "=====> url is ${url}"
branch=${GIT_BRANCH}
if [ "$branch" != "" ]; then
  echo "=====> branch is is ${branch}"
fi

if [ "$branch" == "$url" ]; then
  branch=""
fi

if [ "$url" != "" ]; then
  if [[ "$url" =~ \.(tgz)$ ]]; then
    echo "=====> Downloading tgz archive: $url"
    curl -k -s "$url" | tar xvz -C "$dir"
  elif [[ "$url" =~ \.(zip)$ ]]; then
    echo "=====> Downloading zip archive: $url"
	tempfile=$(mktemp -t tempXXXXX)
	curl -k -o "$tempfile" "$url"
	unzip "$tempfile" -d "$dir"
	rm tempfile
  else
    echo "=====> Downloading git repo: $url"
    git clone $url $dir
  fi
  echo "=====> Download finished"

  if [ "$branch" != "" ]; then
    git checkout $branch
  fi

  echo "=====> copying contents of $dir to $1"
  cd $dir
  cp -R $dir/* $1
  echo "=====> final contents of build dir"
  ls -al $1
fi